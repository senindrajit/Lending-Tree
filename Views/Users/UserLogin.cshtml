<html>
<head>
    <style>
        body {
            background: url('/Images/q8.jpg');
            background-repeat: no-repeat;
            background-size: 1920px 1080px;
            color: ghostwhite;
        }

        div {
            color: black;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Lending Tree", "Create", "Users", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("User", "UserHome", "Home")</li>


                </ul>
            </div>
        </div>
    </div>
    @model WebApplication1.Models.User

    @{
        ViewBag.Title = "UserLogin";
    }

    <h2>User Login Page</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <br />
            <br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.UserId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.UserId, new { style = "width:300px; height:33px", htmlAttributes = new { @class = "form-control" }, autocomplete = "off" })
                    @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.password, new { style = "width:300px; height:33px", htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="LogIn" class="btn btn-default" />
                </div>
            </div>
        </div>
        <div>@Html.ActionLink("New User? Sign Up here....", "Create", "Users")</div>
    }
    <h4 style="color:red">@ViewBag.Message</h4>
    <div>
        <table>
            <tr>
                <td style="padding-right: 10px">@Html.ActionLink("Forgot Email", "ForgotUserId", "Users")</td>
                <td style="padding-right: 10px">@Html.ActionLink("Forgot Password", "ForgotPassword", "Users")</td>
            </tr>
            <tr>
                <td style="padding-right: 10px">@Html.ActionLink("User Registration", "Create", "Users")</td>
                <td style="padding-right: 10px">@Html.ActionLink("Admin Login", "AdminLogin", "Admins")</td>
                <td style="padding-right: 10px">@Html.ActionLink("Agent Login", "AgentLogin", "Agents")</td>
            </tr>
        </table>
    </div>

    @section Scripts{
        <script src="~/Scripts/jquery-3.4.1.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    }

    </body>
</html>